.main
  z-index 1
  position absolute
  display block
  left 0
  min-height 100%
  width 52px
  background #23282E
  transition width 1s
  overflow hidden
  &.active
    width 240px
    transition all 1s

.main__logo
  margin-left 10px
  margin-top 28px
  margin-bottom 15px
  height 50px
  width 32px
  background url(../images/main-logo-min.png) center center no-repeat
  transition width 1s
.main.active .main__logo
  margin-left 25px
  height 50px
  width 150px
  background url(../images/main-logo.png) center center no-repeat
  transition opacity 1s

.main__nav__item
  position relative
  padding-top 10px
  padding-right 10px
  padding-bottom 10px
  padding-left 12px
  sans-regular()
.main__nav__item:hover .main__nav__item__icon:before,
.main__nav__item:hover .nav__item__title
  color #82CA9C

.nav__item__title
  position absolute
  opacity 0
  transition all 0.5s
.main.active .nav__item__title
  position absolute
  top 9px
  left 52px
  display inline-block
  opacity 1
  transition opacity 2s

.main__nav__item__icon:before
  display inline-block
  width 40px
  height 25px
  padding-right 15px
  font-awesome()
  font-size 28px
  color #5B6168
